<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegjistrohuActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#3fff"
        android:padding="10dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="46sp"
            android:textColor="#fff"
            app:layout_constraintHorizontal_bias="0.476" />

        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/image_view"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src = "@drawable/ic_image_black_24dp"
            />



        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="15dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:background="@drawable/email"
            android:textColor="#fff"
            android:textColorHint="#fffbfb"
            app:layout_constraintHorizontal_bias="0.484"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/email"
            android:textColor="#fff"
            android:textColorHint="#fffbfb"
            android:inputType="textPassword"
            app:layout_constraintHorizontal_bias="0.484" />

        <Button
            android:id="@+id/regjistrohuButton"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="SIGN UP"
            android:background="@drawable/loginbtn"
            android:shadowDx="0.2"
            android:shadowDy="0.2"
            android:shadowColor="#06558d"
            android:textColor="#06558d"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/ruajNeDatabaze"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Ruaj ne Databaze"
            android:background="@drawable/loginbtn"
            android:shadowDx="0.2"
            android:shadowDy="0.2"
            android:shadowColor="#06558d"
            android:textColor="#06558d"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/choose_photo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/choose_image"
            android:background="@drawable/loginbtn"
            android:shadowDx="0.2"
            android:shadowDy="0.2"
            android:shadowColor="#06558d"
            android:textColor="#06558d"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.0" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-35dp"
            android:text="Jeni i regjistruar?"
            android:textSize="14sp"
            android:textColor="#fff"
            app:layout_constraintVertical_bias="0.14" />

        <TextView
            android:id="@+id/loginlink"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="90dp"
            android:text=" LOGIN!"
            android:textSize="14sp"
            android:textColor="#06558d"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.018" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>